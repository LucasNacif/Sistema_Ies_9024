            // Variables para almacenar los IDs
            let materiaId;
            let planEstudioId = '{{planEstudio._id}}';

            $('.btn-outline-danger').click(function () {
                materiaId = $(this).closest('tr').data('id');
                $('#eliminarMateriaModal').modal('show');
            });


            // Función para confirmar la eliminación
            $('#confirmarEliminar').click(function () {
                $.ajax({
                    url: '/materia/eliminar',
                    type: 'DELETE',
                    data: JSON.stringify({
                        idMateria: materiaId,
                        idPlanEstudio: planEstudioId
                    }),
                    contentType: 'application/json',
                    success: function (response) {
                        $('#eliminarMateriaModal').modal('hide');
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        console.error('Error al eliminar la materia:', error);
                    }
                });
            });

        </script>

</html>