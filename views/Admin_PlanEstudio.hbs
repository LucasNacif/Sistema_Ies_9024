    <script src="/js/jsBoostrap/ripples.min.js"></script>
    <script src="/js/jsBoostrap/main.js"></script>
</head>


<body>
    <section class="full-box cover dashboard-sideBar">
        <div class="full-box dashboard-sideBar-bg btn-menu-dashboard"></div>
        <div class="full-box dashboard-sideBar-ct">
            <div class="full-box text-uppercase text-center text-titles dashboard-sideBar-title">
                Bedel <i class="zmdi zmdi-close btn-menu-dashboard visible-xs"></i>
            </div>
            <div class="full-box dashboard-sideBar-UserInfo">
                <figure class="full-box">
                    <img src="/assets/img/logo_IES.jpg" alt="UserIcon">
                </figure>
                <ul class="full-box list-unstyled text-center">
                    <li><a href="#" class="btn-exit-system" id="logout-button"><i class="zmdi zmdi-power"></i></a></li>
                </ul>
            </div>
            <ul class="list-unstyled full-box dashboard-sideBar-Menu">
                <li><a href="/Administracion"><i class="zmdi zmdi-graduation-cap zmdi-hc-fw"></i> Carreras</a></li>
                <li><a href="/mesa"><i class="zmdi zmdi-calendar-check zmdi-hc-fw"></i> Mesas</a></li>
                <li><a href="/alumnoEstado"><i class="zmdi zmdi-accounts zmdi-hc-fw"></i> Gestión académica</a></li>
                <li><a href="/AdministracionSuperAdmin"><i class="zmdi zmdi-settings zmdi-hc-fw"></i> Super Admin</a>
                </li>
            </ul>
        </div>
    </section>

    <!-- Contenido de la página principal -->
    <section class="full-box dashboard-contentPage" style="overflow-y: auto; overflow-x: hidden;">
        <nav class="full-box dashboard-Navbar">
            <ul class="full-box list-unstyled text-right">
                <li class="pull-left">
                    <a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
                </li>
            </ul>
        </nav>

        <div class="container mt-4">
            <!-- Información de la Carrera -->
            <h3>Información de la Carrera</h3>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Nombre</th>
                        <td>{{carrera.nombreCarrera}}</td>
                    </tr>
                    <tr>
                        <th>Titulo</th>
                        <td>{{carrera.titulo}}</td>
                    </tr>
                    <tr>
                        <th>Carga horaria</th>
                        <td>{{carrera.cargaHoraria}}</td>
                    </tr>
                    <tr>
                        <th>Duracion</th>
                        <td>{{carrera.duracion}}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Materias -->
        <div class="container mt-4">
            <h4 class="mt-4">Materias</h4>
            <div class="mb-3">
                <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#agregarMateriaModal"
                    style="border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);">
                    <i class="zmdi zmdi-plus-circle"></i> Añadir Materia
                </button>

            </div>
            {{#if materias}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre de la Materia</th>
                        <th>Correlativas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each materias}}
                    <tr data-id="{{this._id}}" data-plan-id="{{planEstudio._id}}" data-carrera-id="{{carrera._id}}">
                        <td>{{this.nombreMateria}}</td>
                        <td>
                            {{#if this.correlativas}}
                            {{#each this.correlativas}}
                            {{this.nombreMateria}}<br>
                            {{/each}}
                            {{else}}
                            Sin correlativas
                            {{/if}}
                        </td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm editar-btn"
                                onclick="mostrarModificarMateriaModal(this)" data-id="{{this._id}}"
                                data-nombre="{{this.nombreMateria}}"
                                data-correlativas="{{#each this.correlativas}}{{this.nombreMateria}},{{/each}}">
                                <i class="zmdi zmdi-edit"></i> Editar
                            </button>



                            <button class="btn btn-outline-danger btn-sm eliminar-btn">
                                <i class="zmdi zmdi-delete"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            No hay materias disponibles
            {{/if}}
        </div>


<!-- Modal de Modificación de Materia -->
<div class="modal fade" id="modificarMateriaModal" tabindex="-1" aria-labelledby="modificarMateriaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modificarMateriaModalLabel">Modificar Materia</h3>
            </div>
            <div class="modal-body">
                <form id="formModificarMateria" action="/materia/modificar" method="POST">
                    <div class="mb-3">
                        <label for="nombreMateria" class="form-label">Nombre de la Materia</label>
                        <input type="text" class="form-control" id="nombreMateria" required>
                    </div>
                    <div class="mb-3">
                        <label for="correlativas" class="form-label">Correlativas Actuales</label>
                        <ul id="listaCorrelativas" class="list-group mb-3"></ul>
                    </div>
                    <div class="mb-3">
                        <label for="nuevaCorrelativa" class="form-label">Agregar Nueva Correlativa</label>
                        <select class="form-select" id="nuevaCorrelativa">
                            <option value="">Seleccione una materia</option>
                            {{#each materias}}
                            <option value="{{this._id}}">{{this.nombreMateria}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <input type="hidden" id="idMateria" value="{{this._id}}">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



        <script>

            function mostrarModificarMateriaModal(button) {
                console.log("Ejecutando mostrarModificarMateriaModal");

                const idMateria = button.getAttribute("data-id");
                const nombreMateria = button.getAttribute("data-nombre");
                const correlativasStr = button.getAttribute("data-correlativas") || "";
                const correlativas = correlativasStr.split(",").map(c => c.trim()).filter(c => c);

                const nombreInput = document.getElementById("nombreMateria");
                const idInput = document.getElementById("idMateria");
                const listaCorrelativas = document.getElementById("listaCorrelativas");

                console.log("idMateria:", idMateria);
                console.log("nombreMateria:", nombreMateria);
                console.log("correlativas:", correlativas);

                if (!nombreInput || !idInput || !listaCorrelativas) {
                    console.error("Uno o más elementos no se encontraron en el DOM");
                    return;
                }

                nombreInput.value = nombreMateria;
                idInput.value = idMateria;
                listaCorrelativas.innerHTML = '';
                correlativas.forEach(correlativa => {
                    const li = document.createElement("li");
                    li.className = "list-group-item";
                    li.textContent = correlativa;
                    listaCorrelativas.appendChild(li);
                });

                $('#modificarMateriaModal').modal('show');
            }

