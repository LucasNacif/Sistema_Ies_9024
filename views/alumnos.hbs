<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/Styles/main.css">
    <title>Gestión de Alumnos - IES 9-024 Lavalle</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .nav-bar {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo-container {
            display: flex;
            align-items: center;
        }

        .logo {
            max-height: 40px;
            cursor: pointer;
        }

        .institute-name {
            margin-left: 20px;
            font-size: 18px;
            font-weight: bold;
        }

        .nav-menu {
            display: flex;
            align-items: center;
        }

        .nav-menu a {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            margin: 0 5px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .nav-menu a:hover {
            background-color: #555;
        }

        .logout-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .search-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 25px;
            padding: 5px 15px;
            background-color: #f9f9f9;
        }

        .search-container input {
            flex-grow: 1;
            border: none;
            padding: 10px;
            font-size: 16px;
            background-color: transparent;
        }

        .search-container input:focus {
            outline: none;
        }

        .search-icon {
            color: #777;
            font-size: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #2ecc71;
            color: white;
        }

        .btn {
            padding: 8px 12px;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            margin-right: 10px;
        }

        .btn-add { background-color: #3498db; color: white; }
        .btn-edit { background-color: #f39c12; color: white; }
        .btn-delete { background-color: #e74c3c; color: white; }
        .btn-volver { background-color: #16c0c2; color: white; }

        h2 {
            text-align: center;
        }

        .message {
            color: green;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .error-message {
            color: red;
            font-weight: bold;
            margin-bottom: 20px;
        }
    </style>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>
    <nav class="nav-bar">
        <div class="logo-container">
            <img src="./assets/img/logo_IES.jpg" alt="Logo IES" class="logo" onclick="window.location.href='/menuBedel'">
            <span class="institute-name">IES 9-024 Lavalle</span>
        </div>
        <div class="nav-menu">
            <a href="/carreras">Carreras</a>
            <a href="/alumnos">Alumnos</a>
            <a href="/mesas">Mesas</a>
        </div>
        <button class="logout-btn" onclick="cerrarSesion()">Cerrar Sesión</button>
    </nav>

    <div class="container">
        <h2>Gestión de Alumnos</h2>

        <button id="toggleForm" class="btn btn-add">Agregar Nuevo Alumno</button>
        <button id="btnModificar" class="btn btn-edit">Modificar Alumno</button>
        <button id="btnDarDeBaja" class="btn btn-delete">Dar de Baja Alumno</button>
        <button id="btnVolver" class="btn btn-volver">Volver</button>

        <div id="messageContainer"></div>

        <form method="post" action="/alumno/agregar" style="display: none;">
    <div>
        <label for="nombreCompleto">Nombre Completo:</label>
        <input type="text" id="nombreCompleto" name="nombreCompleto" required>
    </div>
    <div>
        <label for="numDocAlumn">Número de Documento:</label>
        <input type="text" id="numDocAlumn" name="numDocAlumn" required>
    </div>
    <div>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>
    </div>
    <div>
        <label for="corte">Corte:</label>
        <input type="text" id="corte" name="corte" required>
    </div>
    <div>
        <label for="tituloSecundario">Título Secundario:</label>
        <select id="tituloSecundario" name="tituloSecundario" required>
            <option value="Sí">Sí</option>
            <option value="No">No</option>
        </select>
    </div>
    <div>
        <label for="psicofisico">Psicofísico:</label>
        <select id="psicofisico" name="psicofisico" required>
            <option value="Sí">Sí</option>
            <option value="No">No</option>
        </select>
    </div>
    <div>
        <label for="partidaNacim">Partida de Nacimiento:</label>
        <select id="partidaNacim" name="partidaNacim" required>
            <option value="Sí">Sí</option>
            <option value="No">No</option>
        </select>
    </div>
    <div>
        <label for="dniActualizado">DNI Actualizado:</label>
        <select id="dniActualizado" name="dniActualizado" required>
            <option value="Sí">Sí</option>
            <option value="No">No</option>
        </select>
    </div>
    <div>
        <label for="analiticoFiel">Analítico Fiel:</label>
        <select id="analiticoFiel" name="analiticoFiel" required>
            <option value="Sí">Sí</option>
            <option value="No">No</option>
        </select>
    </div>
    <div>
        <label for="antecedenPen">Antecedentes Penales:</label>
        <select id="antecedenPen" name="antecedenPen" required>
            <option value="Sí">Sí</option>
            <option value="No">No</option>
        </select>
    </div>
    <button type="submit" class="btn btn-add">Enviar</button>
</form>


        <div class="search-container">
            <input type="text" id="searchBox" placeholder="Buscar alumno..." />
            <i class="fas fa-search search-icon"></i>
        </div>

        <div class="table-responsive">
            <table id="alumnosTable">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Número de Documento</th>
                        <th>Nombre</th>
                        <th>Corte</th>
                        <th>Título Secundario</th>
                        <th>Psicofísico</th>
                        <th>Partida de Nacimiento</th>
                        <th>DNI Actualizado</th>
                        <th>Analítico Fiel</th>
                        <th>Antecedentes Penales</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each alumnos}}
                    <tr>
                        <td>{{nombreCompleto}}</td>
                        <td>{{numDocAlumn}}</td>
                        <td>{{nombre}}</td>
                        <td>{{corte}}</td>
                        <td>{{#if tituloSecundario}}Sí{{else}}No{{/if}}</td>
                        <td>{{#if psicofisico}}Sí{{else}}No{{/if}}</td>
                        <td>{{#if partidaNacim}}Sí{{else}}No{{/if}}</td>
                        <td>{{#if dniActualizado}}Sí{{else}}No{{/if}}</td>
                        <td>{{#if analiticoFiel}}Sí{{else}}No{{/if}}</td>
                        <td>{{#if antecedenPen}}Sí{{else}}No{{/if}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        //el código JavaScript no se ejecute hasta que el documento HTML esté cargado
        document.addEventListener("DOMContentLoaded", function () {
            const toggleFormButton = document.getElementById("toggleForm");
            const form = document.querySelector("form");
            const searchBox = document.getElementById("searchBox");
            const alumnosTable = document.getElementById("alumnosTable");
            const btnVolver = document.getElementById("btnVolver");
            const messageContainer = document.getElementById('messageContainer');

            // Mostrar/ocultar formulario de agregar alumno
            toggleFormButton.addEventListener("click", function () {
                if (form.style.display === "none" || form.style.display === "") {
                    form.style.display = "block";
                    toggleFormButton.textContent = "Ocultar Formulario";
                } else {
                    form.style.display = "none";
                    toggleFormButton.textContent = "Agregar Nuevo Alumno";
                }
            });

            // Búsqueda en la tabla de alumnos
            searchBox.addEventListener("keyup", function () {
                const searchTerm = this.value.toLowerCase();
                const rows = alumnosTable.getElementsByTagName("tr");

                for (let i = 1; i < rows.length; i++) {
                    const row = rows[i];
                    const cells = row.getElementsByTagName("td");
                    let found = false;

                    for (let j = 0; j < cells.length; j++) {
                        if (cells[j].textContent.toLowerCase().includes(searchTerm)) {
                            found = true;
                            break;
                        }
                    }

                    row.style.display = found ? "" : "none";
                }
            });

            // Evento para el botón Volver
            btnVolver.addEventListener("click", function () {
                window.location.href = "/menuBedel";
            });

            // Función cerrar sesión
            window.cerrarSesion = function () {
                // redireccionar o enviar solicitud al servidor
                window.location.href = "/logout";
            };
        });
    </script>
</body>

</html>
