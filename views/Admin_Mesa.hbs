<!DOCTYPE html>
<html lang="es">

<head>
    <title>Mesas</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="assets/img/favicon.png" />
    <link rel="stylesheet" href="/Styles/main.css">
    <link rel="stylesheet" href="/Styles/bootstrap.min.css">
    <link rel="stylesheet" href="/Styles/Admin_Mesa.css">
    <script src="/js/jsBoostrap/jquery-3.1.1.min.js"></script>
</head>
<script>
    document.addEventListener("DOMContentLoaded", () => {

    const botonesModificar = document.querySelectorAll(".btnModificar");
    botonesModificar.forEach(button => {
            button.addEventListener("click", (e) => {
                const mesaId = e.target.getAttribute("data-id");
                const fechaMesa = e.target.getAttribute("data-fecha");
                const horaMesa = e.target.getAttribute("data-hora");
                const materiaId = e.target.getAttribute("data-materia");
                const estadoMesa = e.target.getAttribute("data-estado");

                // Llenar los datos en el formulario del modal
                document.getElementById("idMesa").value = mesaId;
                document.getElementById("fechaMesaMod").value = fechaMesa;
                document.getElementById("horaMesaMod").value = horaMesa;
                document.getElementById("materiaMod").value = materiaId;
                document.getElementById("estadoMesaMod").value = estadoMesa;

                // Mostrar el modal
                $('#modalModificarMesa').modal('show');
            });
        });

    const formAgregarMesa = document.getElementById("formAgregarMesa");

    formAgregarMesa.addEventListener("submit", async (event) => {
        event.preventDefault();

        // Obtén los datos del formulario
        const fechaMesa = document.getElementById("fechaMesa").value;
        const horaMesa = document.getElementById("horaMesa").value;
        const materiaId = document.getElementById("Materia").value;

        // Estructura los datos en un objeto
        const mesaData = {
            fechaMesa,
            horaMesa,
            Materia: materiaId
        };

        try {
            // Realiza el fetch para crear la mesa
            const response = await fetch("/mesa/crear", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(mesaData)
            });

            if (response.ok) {
                alert("Mesa creada exitosamente");
                location.reload();
            } else {
                throw new Error("Hubo un problema al crear la mesa");
            }
        } catch (error) {
            console.error("Error:", error);
            alert("Error al crear la mesa. Inténtalo de nuevo.");
        }
    });

    const formModificarMesa = document.getElementById("formModificar")
    formModificarMesa.addEventListener("submit", async (event) => {
        event.preventDefault();

        const mesaId = document.getElementById("idMesa").value;
        const fechaMesa = document.getElementById("fechaMesaMod").value;
        const horaMesa = document.getElementById("horaMesaMod").value;
        const materiaId = document.getElementById("materiaMod").value;
        const estadoMesa = document.getElementById("estadoMesaMod").value;

        // Estructura los datos en un objeto
        const mesaData = {
            fechaMesa,
            horaMesa,
            Materia: materiaId, 
            estadoActual: estadoMesa
        };

        try {
            // Realiza el fetch para crear la mesa
            const response = await fetch(`/mesa/modificar/${mesaId}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(mesaData)
            });

            if (response.ok) {
                alert("Mesa modificada exitosamente");
                location.reload();
            } else {
                throw new Error("Hubo un problema al modificar la mesa");
            }
        } catch (error) {
            console.error("Error:", error);
            alert("Error al modificar la mesa. Inténtalo de nuevo.");
        }
    });
});

</script>
<body>
    <!-- Barra lateral -->
    <section class="full-box cover dashboard-sideBar">
        <div class="full-box dashboard-sideBar-bg btn-menu-dashboard"></div>
        <div class="full-box dashboard-sideBar-ct">
            <div class="full-box text-uppercase text-center text-titles dashboard-sideBar-title">Bedel <i
                    class="zmdi zmdi-close btn-menu-dashboard visible-xs"></i></div>
            <div class="full-box dashboard-sideBar-UserInfo">
                <figure class="full-box">
                    <img src="/assets/img/logo_IES.jpg" alt="UserIcon">
                </figure>
                <ul class="full-box list-unstyled text-center">
                    <li><a href="#" class="btn-exit-system" id="logout-button"><i class="zmdi zmdi-power"></i></a></li>
                </ul>
            </div>
            <ul class="list-unstyled full-box dashboard-sideBar-Menu">
                <li><a href="/Administracion"><i class="zmdi zmdi-graduation-cap zmdi-hc-fw"></i> Carreras</a></li>
                <li><a href="/mesa"><i class="zmdi zmdi-calendar-check zmdi-hc-fw"></i> Mesas</a></li>
                <li><a href="/alumnoEstado"><i class="zmdi zmdi-accounts zmdi-hc-fw"></i> Gestión académica</a></li>
                <li><a href="/AdministracionSuperAdmin"><i class="zmdi zmdi-settings zmdi-hc-fw"></i> Super Admin</a>
                </li>
            </ul>
        </div>
    </section>

    <!-- Contenido principal -->
    <section class="full-box dashboard-contentPage" style="overflow-y: auto; overflow-x: hidden;">
        <nav class="full-box dashboard-Navbar">
            <ul class="full-box list-unstyled text-right">
                <li class="pull-left">
                    <a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid">
            <div class="page-header" style="margin-top: 61px;">
                <h1 class="text-titles">Mesas</h1>
            </div>
        </div>

        <!-- Botones principales -->
        <div class="botones text-center">
            <button id="btnModificarMesa" class="btn btn-warning">Modificar Mesa</button>
            <button id="btnDarDeBajaMesa" class="btn btn-danger">Dar de Baja</button>
            <button id="btnMostrarSuspendidas" class="btn btn-info">Mostrar Mesas Suspendidas</button>
        </div>

        <!-- Formulario para agregar una nueva mesa -->
        <div class="container" id="formAgregarMesa" style=" margin-top: 20px;">
            <h2>Crear Mesa</h2>
            <form>
                <div>
                    <label for="fechaMesa">Fecha de la Mesa:</label>
                    <input type="date" id="fechaMesa" name="fechaMesa" required>
                </div>
                <div class="form-group">
                    <label for="horaMesa">Hora de la mesa:</label>
                    <input type="time" id="horaMesa" name="horaMesa" class="form-control" required>
                </div>
                <div>
                    <label for="Materia">Materia:</label>
                    <select id="Materia" name="Materia" required>
                          {{#each materiasDiponibles}}
                        <option value="{{this._id}}">{{this.nombreMateria}}</option>
                         {{/each}}
                    </select>
                </div>
                <div class="botones">
                  <button type="submit" class="btn btn-add" id="btnSubmitMesa">Crear Mesa</button>
                </div>
            </form>
        </div> 


        <!-- Tarjetas de mesas disponibles -->
        <div class="container" style="margin-top: 20px;">
            <h2>Mesas disponibles</h2>
            <div class="row">
                {{#each mesasActivas}}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header text-white bg-primary">
                            <h4 class="card-title">Mesa de {{this.Materia.nombreMateria}}</h4>
                        </div>
                        <div class="card-body">

                            <p><strong>Id:</strong> {{this._id}}</p>
                            <p><strong>Fecha:</strong> {{formatDate this.fechaMesa}}</p>
                            <p><strong>Hora:</strong> {{this.horaMesa}}</p>
                            <p><strong>Estado:</strong> {{this.estadoActual}}</p>
                            <p><strong>Alumnos Inscritos:</strong> {{#each this.Alumno}} {{this.nombreCompleto}},
                                {{/each}}</p>
                            
                            <button class="btn btn-warning btnModificar" data-id="{{this._id}}" data-fecha="{{this.fechaMesa}}" data-hora="{{this.horaMesa}}" data-estado="{{this.estadoActual}}" data-materia="{{this.Materia._id}}">Modificar</button>

                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <!-- Modal para Modificar Mesa -->
        <div class="modal fade" id="modalModificarMesa" tabindex="-1" role="dialog"
            aria-labelledby="modalModificarMesaLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalModificarMesaLabel">Modificar Mesa</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formModificar">
                            <div class="form-group">
                                <label for="idMesa">ID de la Mesa:</label>
                                <input type="text" id="idMesa" name="id" class="form-control" required readonly>
                            </div>
                            <div class="form-group">
                                <label for="fechaMesaMod">Fecha de la mesa:</label>
                                <input type="date" id="fechaMesaMod" name="fechaMesa" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="horaMesaMod">Hora de la mesa:</label>
                                <input type="time" id="horaMesaMod" name="horaMesa" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="estadoMesaMod">Estado:</label>
                                <select name="estadoMesa" id="estadoMesaMod" class="form-control">
                                    <option value="activa">Activa</option>
                                    <option value="suspendida">Suspendida</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="materiaMod">Materia:</label>
                                <select id="materiaMod" name="Materia" class="form-control" required>
                                    {{#each materiasDiponibles}}
                                    <option value="{{this._id}}">{{this.nombreMateria}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-warning">Modificar Mesa</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/js/jsBoostrap/sweetalert2.min.js"></script>
    <script src="/js/jsBoostrap/bootstrap.min.js"></script>
    <script src="/js/jsBoostrap/main.js"></script>
    
</body>

</html>