<!DOCTYPE html>
<html lang="es">

<head>
    <title>Mesas</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="icon" type="image/png" href="assets/img/favicon.png" />
    <link rel="stylesheet" href="/Styles/main.css">
    <link rel="stylesheet" href="/Styles/bootstrap.min.css">
    <link rel="stylesheet" href="/Styles/Admin_Mesa.css">
    <script src="/js/jsBoostrap/jquery-3.1.1.min.js"></script>
</head>

<body>
	
	<!-- Barra lateral (SideBar) -->
    <section class="full-box cover dashboard-sideBar">
        <div class="full-box dashboard-sideBar-bg btn-menu-dashboard"></div>
        <div class="full-box dashboard-sideBar-ct">
            <div class="full-box text-uppercase text-center text-titles dashboard-sideBar-title">
                Bedel
                <i class="zmdi zmdi-close btn-menu-dashboard visible-xs"></i>
            </div>
            <div class="full-box dashboard-sideBar-UserInfo">
                <figure class="full-box">
                    <img src="/assets/img/logo_IES.jpg" alt="UserIcon">
                </figure>
                <ul class="full-box list-unstyled text-center">
                    <li><a href="#" class="btn-exit-system" id="logout-button"><i class="zmdi zmdi-power"></i></a></li>
                </ul>
            </div>
            <ul class="list-unstyled full-box dashboard-sideBar-Menu">
                <li><a href="/Administracion"><i class="zmdi zmdi-graduation-cap zmdi-hc-fw"></i>
                        Carreras</a></li>
                <li><a href="/mesa"><i class="zmdi zmdi-calendar-check zmdi-hc-fw"></i>
                        Mesas</a></li>
                <li><a href="/alumnoEstado"><i class="zmdi zmdi-accounts zmdi-hc-fw"></i>
                        Gestión académica</a></li>
                <li><a href="/AdministracionSuperAdmin"><i class="zmdi zmdi-settings zmdi-hc-fw"></i>
                        Super Admin</a>
                </li>
            </ul>
        </div>
    </section>

	<!-- Contenido de la página principal -->
	<section class="full-box dashboard-contentPage" style="overflow-y: auto; overflow-x: hidden;">

		<!-- Barra de navegación superior (NavBar) -->
		<nav class="full-box dashboard-Navbar">
			<ul class="full-box list-unstyled text-right">
				<li class="pull-left">
					<!-- Botón para mostrar/ocultar el menú lateral -->
					<a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
				</li>
			</ul>
		</nav>

		<!-- Página de Mesas -->
		<div class="container-fluid">
            <div class="page-header" style="margin-top: 61px;">
                <h1 class="text-titles">Mesas</h1>
            </div>
        </div>


		<!-- Botones principales -->
        <div class="botones text-center">
            <button id="btnAgregarMesa" class="btn btn-success">Agregar Mesa</button>
            <button id="btnModificarMesa" class="btn btn-warning">Modificar Mesa</button>
            <button id="btnDarDeBajaMesa" class="btn btn-danger">Dar de Baja</button>
            <button id="btnMostrarSuspendidas" class="btn btn-info">Mostrar Mesas Suspendidas</button>
        </div>

        <!-- Formulario para agregar una nueva mesa -->
        <div class="container" id="formAgregarMesa" style="display: none; margin-top: 20px;">
            <form id="formAgregar" action="/mesa/agregar" method="POST">
                <div class="form-group">
                    <label for="fechaMesa">Fecha de la mesa:</label>
                    <input type="date" id="fechaMesa" name="fechaMesa" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="horaMesa">Hora de la mesa:</label>
                    <input type="time" id="horaMesa" name="horaMesa" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="materia">Materia:</label>
                    <select id="materia" name="Materia" class="form-control" required>
                        <!-- Opciones de materias cargadas dinámicamente -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="alumno">Alumno:</label>
                    <select id="alumno" name="Alumno" class="form-control">
                        <!-- Opciones de alumnos cargadas dinámicamente -->
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Agregar Mesa</button>
            </form>
        </div>

        <!-- Formulario para modificar una mesa existente -->
        <div class="container" id="formModificarMesa" style="display: none; margin-top: 20px;">
            <form id="formModificar" action="/mesa/modificar" method="POST">
                <div class="form-group">
                    <label for="idMesa">ID de la Mesa:</label>
                    <input type="text" id="idMesa" name="id" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="fechaMesaMod">Fecha de la mesa:</label>
                    <input type="date" id="fechaMesaMod" name="fechaMesa" class="form-control">
                </div>
                <div class="form-group">
                    <label for="horaMesaMod">Hora de la mesa:</label>
                    <input type="time" id="horaMesaMod" name="horaMesa" class="form-control">
                </div>
                <div class="form-group">
                    <label for="materiaMod">Materia:</label>
                    <select id="materiaMod" name="Materia" class="form-control">
                        <!-- Opciones de materias cargadas dinámicamente -->
                    </select>
                </div>
                <button type="submit" class="btn btn-warning">Modificar Mesa</button>
            </form>
        </div>

        <!-- Visualización de mesas suspendidas -->
        <div class="container" id="mesasSuspendidas" style="display: none; margin-top: 20px;">
            <h3>Mesas Suspendidas</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Materia</th>
                        <th>Alumno</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody id="suspendidasTable">
                    <!-- Contenido dinámico cargado mediante JavaScript -->
                </tbody>
            </table>
        </div>

		 <!-- Formulario para inscripción a una mesa de examen -->
		<div class="container" id="formContainer" style="margin-top: 20px;">
			<form id="formInscripcionMesa" action="/inscribir" method="POST">
				<div class="form-group">
					<label for="materia" class="col-sm-2 control-label">Materia</label>
					<div class="col-sm-10">
						<select class="form-control" id="materia" name="Materia" required>
							
						</select>
					</div>
				</div>
				
				<div class="form-group">
					<label for="mesa" class="col-sm-2 control-label">Mesa de examen</label>
					<div class="col-sm-10">
						<select class="form-control" id="mesa" name="mesa" required>
							
						</select>
					</div>
				</div>
				
				<div class="form-group">
					<label for="alumno" class="col-sm-2 control-label">Alumno</label>
					<div class="col-sm-10">
						<select class="form-control" id="alumno" name="Alumno" required>
							
						</select>
					</div>
				</div>
				
				<div class="form-group text-center">
					<button type="submit" class="btn btn-primary">Inscribirse</button>
				</div>
			</form>
		</div>

	</section>

<!-- Enlaces a los scripts necesarios -->
    <script src="/js/jsBoostrap/sweetalert2.min.js"></script>
    <script src="/js/jsBoostrap/bootstrap.min.js"></script>
    <script src="/js/jsBoostrap/material.min.js"></script>
    <script src="/js/jsBoostrap/ripples.min.js"></script>
    <script src="/js/jsBoostrap/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="/js/jsBoostrap/main.js"></script>
    <script src="js/Admin_Mesa.js"></script>
	
</body>

</html>