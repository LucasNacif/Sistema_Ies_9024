{{! Alumno_Admin.hbs }}
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/Styles/main.css" />
    <title>Gestión de Alumnos - IES 9-024 Lavalle</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            overflow-y: auto;
        }

        .nav-bar {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo-container {
            display: flex;
            align-items: center;
        }

        .logo {
            max-height: 40px;
            cursor:
                pointer;
        }

        .institute-name {
            margin-left: 20px;
            font-size: 18px;
            font-weight: bold;
        }

        .nav-menu {
            display: flex;
            align-items: center;
        }

        .nav-menu a {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            margin: 0 5px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .nav-menu a:hover {
            background-color: #555;
        }

        .logout-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .search-container {
            display: flex;
            align-items:
                center;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 25px;
            padding: 5px 15px;
            background-color: #f9f9f9;
        }

        .search-container input {
            flex-grow: 1;
            border: none;
            padding: 10px;
            font-size: 16px;
            background-color: transparent;
        }

        .search-container input:focus {
            outline:
                none;
        }

        .search-icon {
            color: #777;
            font-size: 20px;
        }

        table {
            width:
                100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table-responsive {
            max-width: auto;
            max-height: auto;
            overflow-x: hidden;
        }

        th,
        td {
            padding:
                12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color:
                #2ecc71;
            color: white;
        }

        .btn {
            padding: 8px 12px;
            border: none;
            cursor:
                pointer;
            border-radius: 4px;
            margin-right: 10px;
        }

        .btn-add {
            background-color: #3498db;
            color: white;
        }

        .btn-edit {
            background-color:
                #f39c12;
            color: white;
        }

        .btn-delete {
            background-color: #e74c3c;
            color:
                white;
        }

        .btn-volver {
            background-color: #16c0c2;
            color: white;
        }

        h2 {
            text-align: center;
        }

        .message {
            color: green;
            font-weight: bold;
            margin-bottom: 20px;
            display: none;
        }

        .error-message {
            display: none;
            color: red;
            font-weight: bold;
            margin-bottom: 20px;
        }

        form {
            color: black;
        }

        form input[type="text"],
        form input[type="email"],
        form input[type="checkbox"],
        form label {
            color:
                black;
            /* Si deseas cambiar también el color del texto dentro de los
      inputs */
            color: black;
        }
    </style>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

</head>

<body>
